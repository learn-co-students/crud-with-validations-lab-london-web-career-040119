<h1><%= @song.title %></h1>

<p><%= @song.released ? 'Released' : 'NOT released' %></p>
<p><%= @song.release_year %></p>
<p><%= @song.artist_name %></p>
<p><%= @song.genre %></p>

<%= button_to 'Edit', { action: :edit }, method: :get %>
<%= link_to('Delete', song_path(@song), method: :delete, data: { confirm: "Are you sure?" }) %>
<br>
<%= link_to 'Back', songs_path %>
